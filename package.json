{
  "name": "purescript-static-site",
  "version": "0.1.0",
  "description": "A static site generator built with PureScript and Bun",
  "scripts": {
    "dev": "bun run-with-bun.js --watch",
    "build": "bun run-with-bun.js",
    "build:prod": "bun run-with-bun.js --production",
    "clean": "bun run-with-bun.js --clean",
    "clean:all": "bun run-with-bun.js --clean-all",
    "serve": "bun run-with-bun.js --watch",
    "spago:build": "spago build",
    "spago:watch": "spago build --watch",
    "test": "echo \"No tests yet\" && exit 0",
    "setup": "bun generate-assets.js",
    "setup:placeholders": "bun generate-assets.js --placeholders",
    "setup:favicon": "bun generate-assets.js --favicon"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/fs-extra": "^11.0.4",
    "caniuse-lite": "^1.0.30001720",
    "fs-extra": "^11.3.0",
    "gray-matter": "^4.0.3",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-toc-done-right": "^4.2.0",
    "marked": "^15.0.0",
    "purescript": "^0.15.15",
    "rimraf": "^5.0.5",
    "shiki": "^0.14.7",
    "spago": "next",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.15"
  }
}
